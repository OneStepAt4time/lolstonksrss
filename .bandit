# Bandit configuration
exclude_dirs:
  - '/tests'
  - '/test'

# Skips for worktree_manager.py and safe SQL patterns
skips:
  - 'B101'  # assert used
  - 'B404'  # import subprocess
  - 'B607'  # start process with partial path
  - 'B603'  # subprocess without shell equals true
  - 'B608'  # hardcoded SQL - safe when using parameterized queries with ? placeholders
